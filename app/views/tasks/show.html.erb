<h1>Task name: <%= @task.name %></h1>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<span>
  Start time:  <%= @task.date_from.to_formatted_s(:long) %>
</span>
<span>
  Expected end time:  <%= @task.expected_end_time %>
</span>
<span>
  Project:  "<%= @task.project_name %>"
</span>
<span>
  Duration:  <%=@task.duration%> 
</span>

<% unless @task.date_finished? %>
  <%= link_to("Task done", task_path(@task, date_finished: DateTime.new), :method => :put, :confirm => "Sure?") %>
<% end %>

<p>
  <%= link_to "Back to tasks", root_path %> 
</p>
<p>
  <%= link_to "Home", root_path %> 
</p>